{
  "name": "jeevan-saathi-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "shared",
    "web",
    "mobile"
  ],
  "scripts": {
    "dev:web": "cd web && npm run dev",
    "dev:mobile": "cd mobile && npx react-native start",
    "build:web": "cd web && npm run build",
    "build:mobile": "cd mobile && cd android && ./gradlew assembleDebug",
    "test:web": "cd web && npm test",
    "test:mobile": "cd mobile && npm test",
    "install:all": "npm install && cd web && npm install && cd ../mobile && npm install",
    "clean": "rimraf node_modules web/node_modules mobile/node_modules shared/node_modules"
  },
  "devDependencies": {
    "rimraf": "^5.0.0"
  }
}
